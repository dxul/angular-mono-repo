{
  "packages": [
    "projects/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": [
        "**/package.json",
        "**/*.md",
        "**/yarn.lock",
        "**/.vscode/**"
      ]
    }
  }
}